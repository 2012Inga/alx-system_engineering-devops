#!/bin/bash

# Check if the school key pair already exists
if [ -f "school" ] || [ -f "school.pub" ]; then
    echo "The 'school' key pair already exists."
    exit 1
fi

# Generate the RSA key pair
ssh-keygen -t rsa -b 4096 -f school -C "Generated by script"

# Check if the key generation was successful
if [ $? -ne 0 ]; then
    echo "Error generating the RSA key pair."
    exit 1
fi

# Encrypt the private key with passphrase 'betty'
ssh-keygen -p -P "" -N "betty" -f school

echo "RSA key pair 'school' has been created successfully."
